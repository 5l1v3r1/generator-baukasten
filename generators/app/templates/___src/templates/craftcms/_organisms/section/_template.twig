{# @var craft \craft\web\twig\variables\CraftVariable #}
{# @var entry \craft\elements\Entry #}
{#
  o-section
  ------------------------------------------------------------
#}

{# -- Set Defaults -- #}
{% set defaults = {
  cn: 'o-section',
  modifiers: [],
  customClasses: [],
  context: '12:24'
} %}

{# -- Merge Default with Options -- #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# -- Colums Context -- #}
{% set context = opt.context | split(':') %}
{% set contextFirst = context[0] %}
{% set contextLast = context[1] %}

{# -- Modul -- #}
<div class="{{ opt.cn }}
            {% for modifier in opt.modifiers %}
              {{ modifier | length ? '  ' ~ opt.cn ~ '--' ~ modifier }}
            {% endfor %}
            {% for customClass in opt.customClasses %}
              {{ customClass | length ? '  ' ~ customClass }}
            {% endfor %}  {{ opt.cn|replace({ 'o-' : 'js-' }) }}">
  <div class="{{ 'o-row-' ~ contextFirst ~  '  o-row-s-' ~ contextLast }}">
    <div class="{{ 'o-col-' ~ contextFirst ~  '  o-col-s-' ~ contextLast }}">
