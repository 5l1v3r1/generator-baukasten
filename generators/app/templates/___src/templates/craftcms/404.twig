{# @var entry \craft\elements\Entry #}
{# -- 404 Template -- #}
{# ---------------------------------------------------------------------- #}

{% extends '_layouts/_master.twig' %}
{% set bodyClass = "p-404" %}
{% if seomaticSiteMeta ?? null %}
  {% set seomaticMeta = seomaticMeta | merge({'seoTitle': '404 — Page not Found' }) %}
{% else %}
  {% set appTitle = '404 — Page not Found' %}
{% endif %}

{# -- CRITICAL CSS -- #}
{% block appInlineCSS %}
  <style>
    {{ source (_self ~ '_critical.min.css', ignore_missing = true) }}
  </style>
{% endblock %}

{# -- App Content -- #}
{% block appContent %}
  <div class="o-section">
    <div class="o-row">
      {# -- Include Page Title -- #}
      {% include '_molecules/pageTitle/_template.twig' with {
        options: {
          text: '404 — Page not found',
          size: 'h1'
        }
      } only %}

      <p class="o-col">
        Oh no, this page is missing… Sorry!<br>
        Back to <a href="{{ siteUrl }}">Home</a>
      </p>
    </div>
  </div>
{% endblock %}
