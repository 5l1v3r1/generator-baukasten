{# -- Set Defaults -- #}
{% set defaults = {
  cn: 'a-radio',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  waypoint: null,
  waypointAni: null,
  name: null,
  disabled: null,
  checked: null,
  label: null,
  id: null,
  value: null,
} %}

{# -- Merge Default with Options -- #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# -- Modul -- #}
{% if opt.name %}
  <div class="{{ opt.cn }}
                {% for modifier in opt.modifiers %}
                  {{ modifier | length ? '  ' ~ opt.cn ~ '--' ~ modifier }}
                {% endfor %}
              {% for customClass in opt.customClasses %}
                {{ customClass | length ? '  ' ~ customClass }}
              {% endfor %}  {{ opt.js ? opt.cn|replace({ 'a-' : 'js-' }) : '' }}">
    <input class="{{ opt.cn ~ '__radio' }}"
           type="radio"
           {% if opt.id %}id="{{ opt.id }}"{% endif %}
      {% if opt.name %}name="{{ opt.name }}"{% endif %}
      {% if opt.checked %}checked="checked"{% endif %}
      {% if opt.value or opt.value == '' %}value="{{ opt.value }}"{% endif %}
      {% for key, value in opt.data %}
        data-{{ key }}="{{ value }}"
      {% endfor %}
      {{ opt.disabled ? 'disabled' }}>
    <label class="{{ opt.cn ~ '__label' }}" for="{{ opt.id }}">{{ opt.label | raw }}</label>
  </div>
{% endif %}

